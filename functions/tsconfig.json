{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@bot/actions": ["./actions"],
      "@bot/commands": ["./commands"],
      "@bot/config": ["./config"],
      "@bot/middlewares": ["./middlewares"],
      "@bot/types": ["./types"],
      "@bot/utils": ["./utils"]
    },
    "rootDirs": ["src/", "bot/"]
  },
  "compileOnSave": true,
  "include": ["src"]
}
